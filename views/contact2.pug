extends base.pug
block scripts 
    script 
        include ../static/index.js

block style 
    style 
        include ../static/style.css
        include ../static/contact.css
        include ../static/boot.css
block content
    .item 
        <div class="alert alert-success" role="alert">
            | Your form has been successfully submitted!
        </div>
    .container2
            h1.head Contact Us
            form(action="/contact", method="post" class="myform") 
                input(type="text" class="inputTxt" name="name" placeholder="Enter your name")
                input(type="text" class="inputTxt" name="age" placeholder="Enter your age")
                input(type="email" class="inputTxt" name="email" placeholder="Enter your email")
                input(type="text" class="inputTxt" name="desc" placeholder="Enter your concern")
                button(class="btn")
                    | Submit

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous")